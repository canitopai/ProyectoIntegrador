<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#E91E63"
    tools:context=".ui.view.ProductModifyFragment">

    <TextView
        android:id="@+id/lblName"
        android:layout_width="169dp"
        android:layout_height="69dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/shojumaru"
        android:text="Nombre producto:"
        android:textColor="#D81B60"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etModName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/balthazar"
        android:hint="Nombre Producto"
        android:minHeight="48dp"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/lblName"
        app:layout_constraintTop_toTopOf="@+id/lblName" />

    <TextView
        android:id="@+id/lblDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/shojumaru"
        android:text="Descripción:"
        android:textColor="#D81B60"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/lblName"
        app:layout_constraintTop_toBottomOf="@+id/lblName" />

    <EditText
        android:id="@+id/etModDesc"
        android:layout_width="336dp"
        android:layout_height="49dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/balthazar"
        android:hint="Descripción"
        android:minHeight="48dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/lblDesc"
        app:layout_constraintTop_toTopOf="@+id/lblDesc" />

    <TextView
        android:id="@+id/lblCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="156dp"
        android:fontFamily="@font/shojumaru"
        android:text="Categoría:"
        android:textColor="#D81B60"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvName"
        app:layout_constraintStart_toStartOf="@+id/lblDesc"
        app:layout_constraintTop_toBottomOf="@+id/lblDesc" />

    <EditText
        android:id="@+id/etModCat"
        android:layout_width="179dp"
        android:layout_height="48dp"
        android:layout_marginStart="35dp"
        android:fontFamily="@font/balthazar"
        android:hint="Categoría"
        android:minHeight="48dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/lblCategory"
        app:layout_constraintTop_toTopOf="@+id/lblCategory" />

    <TextView
        android:id="@+id/lblPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/shojumaru"
        android:text="Precio:"
        android:textColor="#D81B60"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/lblCategory"
        app:layout_constraintTop_toBottomOf="@+id/lblCategory" />

    <EditText
        android:id="@+id/etModPrice"
        android:layout_width="119dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/balthazar"
        android:hint="Precio"
        android:minHeight="48dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/lblPrice"
        app:layout_constraintTop_toTopOf="@+id/lblPrice" />

    <TextView
        android:id="@+id/lblCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:fontFamily="@font/balthazar"
        android:text="€"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tvPrice"
        app:layout_constraintTop_toTopOf="@+id/tvPrice" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="143dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="120dp"
        android:backgroundTint="#E91E63"
        android:text="Guardar"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="@+id/lblPrice"
        app:layout_constraintTop_toBottomOf="@+id/lblPrice" />

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="143dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="#E91E63"
        android:text="Cancelar"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toEndOf="@+id/btnGuardar"
        app:layout_constraintTop_toTopOf="@+id/btnGuardar" />


</androidx.constraintlayout.widget.ConstraintLayout>